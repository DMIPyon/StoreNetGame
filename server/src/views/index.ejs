<% /* Plantilla de inicio */ %>
<div class="container-fluid p-0">
  <!-- Hero -->
  <section id="hero" class="hero mb-5 d-flex align-items-center">
    <div class="container text-center text-white">
      <h1 class="display-2 fw-bold mb-3">Bienvenido a StoreNetGames</h1>
      <p class="lead mb-4 fs-4">Descubre los juegos más populares y explora nuestras categorías</p>
      <a href="/api/games" class="btn btn-primary btn-lg px-5 py-3">Visitar Tienda</a>
    </div>
  </section>
  <div class="container py-4">
  <!-- Categorías -->
  <section id="categories" class="mb-5">
    <h2 class="mb-3">Categorías</h2>
    <div class="row">
      <% categories.forEach(category => { %>
        <div class="col-6 col-md-3 mb-4">
          <div class="card text-center py-3">
            <ion-icon name="<%= category.icon %>" size="large"></ion-icon>
            <h5 class="mt-2"><%= category.name %></h5>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- Juegos Populares -->
  <section id="popular-games">
    <h2 class="mb-3">Juegos Populares</h2>
    <div class="row">
      <% popularGames.forEach(game => { %>
        <div class="col-6 col-md-3 mb-4">
          <div class="card h-100">
            <img src="<%= game.image_url %>" class="card-img-top" alt="<%= game.title %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= game.title %></h5>
              <% if (game.discount && game.discount > 0) { %>
                <p class="card-text text-danger mb-2">
                  <small><s>$<%= game.original_price.toFixed(2) %></s></small>
                  $<%= game.price.toFixed(2) %>
                </p>
              <% } else { %>
                <p class="card-text mb-2">$<%= game.price.toFixed(2) %></p>
              <% } %>
              <p class="text-muted mb-3"><%= game.category %></p>
              <a href="/api/cart" class="mt-auto btn btn-success">Añadir al carrito</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
</div> 